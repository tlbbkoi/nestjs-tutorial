{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug NestJS App",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
            "args": ["start", "--watch"],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "console": "integratedTerminal"
        }
    ]
}
